<div class="container">

    <div class="jumbotron bg-dark text-center font">
        <img class="burgerpng"
            src="https://img.pngio.com/fast-food-burger-png-image-purepng-free-transparent-cc0-png-food-png-burger-1330_909.png"
            alt="Fast Food Burger PNG Image - PurePNG | Free transparent CC0 PNG ...">
        {{!-- <i class="fas fa-hamburger"></i> --}}
        <h1>Burger Nom Nom </h1>
        <br>
        <h2>Add a Burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    {{!-- <label for="newburger">Add Burger</label> --}}
                    <input type="text" id="newburger" name="burger">
                    <button type="submit" class="btn btn-success" id="addburger">
                        <span class="fa fa-thumbs-up"></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside"><strong>Burgers Added</strong>
                    <p>click the yellow icon to consume it</p>
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fas fa-teeth-open"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Burgers Eaten</strong>
                    <p>Click the red icon to delete the burger</p>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>

    </div>
    <!--endrow -->
</div>
<!--endcontainer -->